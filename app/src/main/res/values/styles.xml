<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="colorControlActivated">#33691e</item>
        <item name="colorControlHighlight">#d50000</item>
    </style>
    <!--textview begin-->
    <style name="MyTextAppearance.White" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="MyTextAppearance.White.Bold" parent="MyTextAppearance.White">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTextAppearance.Black" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyTextAppearance.Black.Italic" parent="MyTextAppearance.Black">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MyTextAppearance.Black.Medium" parent="MyTextAppearance.Black">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MyTextAppearance.Black.Medium.Bold" parent="MyTextAppearance.Black.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTextAppearance.Red" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="MyTextAppearance.Blue" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MyTextAppearance.Blue.Bold" parent="MyTextAppearance.Blue">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTextAppearance.Blue.Big" parent="MyTextAppearance.Blue">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="MyTextAppearance.Blue.Big.Bold" parent="MyTextAppearance.Blue.Big">
        <item name="android:textStyle">bold</item>
    </style>
    <!--textview end-->

    <!--datepicker begin-->
    <style name="MyDatePicker" parent="@android:style/Theme.Holo.Light">
        <item name="android:datePickerStyle">@android:style/Widget.DatePicker</item>
    </style>
    <!--datepicker end-->
</resources>
